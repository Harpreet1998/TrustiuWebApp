@model IEnumerable<TrustiuWebApp.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h1 class="display-4">Product Category Operations</h1>
    <p>View All Product Category</p>
</div>
<p>
    <a asp-action="Create" class="btn btn-dark">Add New Product Category</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th colspan="2">Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.CategoryID">Edit</a>
                </td>
                <td>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.CategoryID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
